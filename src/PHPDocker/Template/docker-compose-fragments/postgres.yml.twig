{% if postgresContainerName %}
    postgres:
      image: postgres:{{ postgres.getVersion() }}
      container_name: {{ postgresContainerName }}
      working_dir: /application
      environment:
        - POSTGRES_USER={{ postgres.getRootUser() }}
        - POSTGRES_PASSWORD={{ postgres.getRootPassword() }}
        - POSTGRES_DB={{ postgres.getDatabaseName() }}
{% endif %}
