    webserver:
      image: phpdockerio/nginx:latest
      container_name: {{ webserverContainerName }}
      working_dir: /application
      volumes:
          - ..:/application
          - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf
      ports:
       - "{{ webserverPort }}:80"
      links:
       - php-fpm
