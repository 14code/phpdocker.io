{% spaceless %}
    {% set bigColumn = 'col col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12' %}
    {% set halfColumn = 'col col-lg-5 col-lg-offset-1 col-md-5 col-md-offset-1 col-sm-12 col-xs-12' %}
    {% if activePage is not defined %}{% set activePage = '' %}{% endif %}
{% endspaceless %}
<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
    <meta name="description"
          content="{% block pageDescription %}PHPDocker.io is a PHP development environment generator built with Docker containers{% endblock %}"/>
    <meta name="author" content="PHPDocker.io"/>
    <meta name="keywords" content="PHP, Docker, development, environment, generator, phpdocker">

    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <![endif]-->
    <title>PHPDocker.io{% block pageTitle %}{% endblock %}</title>

    <link property="stylesheet" rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Oswald%7CHind%7CShadows+Into+Light"/>

    <link rel="stylesheet" href="{{ asset('assets/css/base.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/media-queries.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/css/bootstrap.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/css/bootstrap-multiselect.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/css/bootstrap-toggle.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/css/font-awesome.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/css/jquery-ui.css') }}"/>
</head>

<body data-target="#menu-section">

<div id="wrap">
    <div class="navbar navbar-inverse inner-shadow-bottom" id="menu-section">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('home') }}">
                    PHPDocker.io <span class="beta">beta</span>
                </a>
                <button type="button" class="navbar-toggle collapsed glyphicon glyphicon-menu-hamburger"
                        data-toggle="collapse" data-target="#navigation-top" id="navbar-button"></button>
            </div>
            <div class="navbar-collapse collapse" id="navigation-top">
                <ul class="nav navbar-nav navbar-right">
                    <li class="{% if activePage == 'news' %}active{% endif %}"><a href="{{ path('home') }}">News</a>
                    </li>
                    <li class="{% if activePage == 'generator' %}active{% endif %}"><a href="{{ path('generator') }}">Generator</a>
                    </li>
                    <li class="{% if activePage == 'contact' %}active{% endif %}"><a href="{{ path('contact') }}">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--MENU SECTION END-->
    <section id="content">
        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
    </section>
</div>

<footer class="inner-shadow-top container-fluid">
    <div class="row">
        <div class="copyright col col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <a href="{{ path('home') }}">PHPDocker.io &copy; {{ "now"|date("Y") }}</a>
        </div>
        <div class="share col col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <span class="github-link">
                <a class="" href="https://github.com/phpdocker-io/phpdocker.io" target="_blank">
                    <span class="fa fa-github"></span> Github
                </a>
            </span>
        </div>
    </div>
</footer>

{% include 'analytics.html.twig' %}

<script src="{{ asset('assets/vendor/js/jquery.js') }}"></script>
<script src="{{ asset('assets/vendor/js/jquery-ui.js') }}"></script>
<script src="{{ asset('assets/vendor/js/bootstrap.js') }}"></script>
<script src="{{ asset('assets/vendor/js/bootstrap-multiselect.js') }}"></script>
<script src="{{ asset('assets/vendor/js/bootstrap-toggle.js') }}"></script>
<script src="{{ asset('assets/js/contact-form.js') }}"></script>
<script src="{{ asset('assets/js/main-form.js') }}"></script>

</body>
</html>
